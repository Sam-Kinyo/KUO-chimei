<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // ★ 您的 GAS 部署網址 ★
    const GAS_URL = "https://script.google.com/macros/s/AKfycbwjAmKtz3bspFfJ3gt1i3Ij01gkRYQMb1cnU-WL737t9jBy_GrGQt-irPwjZ3gArMRb/exec";

    // 顯示訊息 Modal
    const msgModal = new bootstrap.Modal(document.getElementById('msgModal'));
    function showMsg(title, body) {
        document.getElementById('msgTitle').innerText = title;
        document.getElementById('msgBody').innerHTML = body;
        msgModal.show();
    }

    // --- 功能 1: 提交登記 (POST) ---
    function submitForm(e) {
        e.preventDefault(); // 阻止表單跳轉
        const btn = document.getElementById('submitBtn');
        const form = document.getElementById('regForm');
        
        // 取得表單資料
        const formData = new FormData(form);
        const data = {};
        formData.forEach((value, key) => data[key] = value);

        // UI 鎖定
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> 處理中...';

        // 這裡使用 'text/plain' 避開 Google Apps Script 的 CORS 選項請求問題
        fetch(GAS_URL, {
            method: "POST",
            body: JSON.stringify(data),
            headers: { "Content-Type": "text/plain;charset=utf-8" }, 
        })
        .then(response => response.json())
        .then(result => {
            if(result.result === "success") {
                showMsg("登記成功", "您的資料已送出，請使用電話號碼查詢進度。");
                form.reset(); // 清空表單
                // 自動切換到查詢頁籤
                document.querySelector('#search-tab').click();
                document.getElementById('searchPhone').value = data.phone;
            } else {
                showMsg("錯誤", "系統發生錯誤，請稍後再試。" + JSON.stringify(result));
            }
        })
        .catch(error => {
            showMsg("連線失敗", "無法連接到伺服器：" + error);
        })
        .finally(() => {
            btn.disabled = false;
            btn.innerText = "送出登記";
        });
    }

    // --- 功能 2: 查詢資料 (GET) ---
    function searchData() {
        const phone = document.getElementById('searchPhone').value.trim();
        const resultArea = document.getElementById('resultArea');

        if (!phone) {
            showMsg("提示", "請輸入電話號碼");
            return;
        }

        resultArea.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary"></div><p class="mt-2">查詢資料庫中...</p></div>';

        fetch(`${GAS_URL}?phone=${phone}`)
        .then(response => response.json())
        .then(data => {
            if (data.length === 0) {
                resultArea.innerHTML = `
                    <div class="alert alert-warning text-center" role="alert">
                        <i class="fa-solid fa-circle-exclamation"></i> 查無此電話資料 (${phone})<br>
                        請確認號碼是否正確，或前往登記。
                    </div>`;
                return;
            }
            renderResults(data);
        })
        .catch(error => {
            resultArea.innerHTML = `<div class="alert alert-danger">查詢失敗：${error}</div>`;
        });
    }

    // 渲染查詢結果列表
    function renderResults(data) {
        const resultArea = document.getElementById('resultArea');
        let html = '';

        data.forEach(item => {
            // 狀態顏色判斷
            let statusClass = 'bg-pending';
            let icon = 'fa-clipboard-list';
            
            if (item.status.includes('排程')) { statusClass = 'bg-scheduling'; icon = 'fa-calendar-days'; }
            if (item.status.includes('燒窯')) { statusClass = 'bg-firing'; icon = 'fa-fire'; }
            if (item.status.includes('完工')) { statusClass = 'bg-done'; icon = 'fa-check'; }

            html += `
            <div class="result-card">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0 fw-bold text-dark">${item.name} <small class="text-muted" style="font-size:0.6em">(${item.village})</small></h5>
                    <span class="status-badge ${statusClass}"><i class="fa-solid ${icon}"></i> ${item.status}</span>
                </div>
                
                <div class="bg-light p-2 rounded mb-2 text-secondary small">
                    <i class="fa-solid fa-box-open"></i> ${item.item || '無備註品項'}
                </div>

                <div class="row g-2 mt-2" style="font-size: 0.9em;">
                    <div class="col-6">
                        <span class="text-muted d-block">開工日期</span>
                        <span class="fw-bold">${item.start_date || '-'}</span>
                    </div>
                    <div class="col-6">
                        <span class="text-muted d-block">燒窯日期</span>
                        <span class="fw-bold text-danger">${item.fire_date || '-'}</span>
                    </div>
                </div>
            </div>`;
        });

        resultArea.innerHTML = `<p class="text-muted small mb-3">共找到 ${data.length} 筆資料：</p>` + html;
    }
</script>

</body>
</html>
